{
    "manifest_version": 2,
    "name": "Cat Now",
    "description": "Show random cat picture",
    "version": "0.1.0",
    "background": {
        "persistent": false,
        "scripts": ["build/bundle.js"]
    },
    "browser_action": {
        "default_icon": "icons/128x128.png",
        "default_popup": "index.html"
    },
    "icons": {
        "16": "icons/16x16.png",
        "48": "icons/48x48.png",
        "128": "icons/128x128.png"
    }
}
